@model PAP.Business.ViewModels.EventViewModel

@{
    Layout = "~/Views/Shared/LayoutAuth.cshtml";
}

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <br />
        <div class="card">
            <h5 class="card-header info-color white-text text-center py-4">
                <strong>New Event</strong>
            </h5>

            <!--Card content-->
            <div class="card-body px-lg-5 pt-0">

                <!-- Form -->
                <form class="text-center" style="color: #757575;">

                    <!-- Name -->
                    <div class="md-form mt-3">
                        <input asp-for="EventName" type="text" id="materialContactFormName" class="form-control">
                        <label for="materialContactFormName">Name</label>
                    </div>

                    <!-- E-mail -->
                    <div class="md-form">
                        <input type="date" asp-for="EventDate" id="materialContactFormEmail" class="form-control">
                        <label for="materialContactFormEmail">Date</label>
                    </div>

                    <!-- Subject -->
                    <label>Subject</label>
                    <select class="browser-default custom-select mb-4">
                        <option value="" disabled>Choose option</option>
                        <option value="1" selected>Feedback</option>
                        <option value="2">Report a bug</option>
                        <option value="3">Feature request</option>
                        <option value="4">Feature request</option>
                    </select>

                    <!--Message-->
                    <div class="md-form">
                        <textarea id="materialContactFormMessage" asp-for="Description" class="form-control md-textarea" rows="3"></textarea>
                        <label for="materialContactFormMessage">Description</label>
                    </div>

                    <!-- Send button -->
                    <button class="btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Create</button>

                </form>
                <!-- Form -->

            </div>

        </div>     
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>


